/**
 *  Exclusive-or gate:
 *  out = not (a == b)
 */

CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    /* (a + b) . !(a . b) */
    Or(a=a, b=b, out=orab);
    And(a=a, b=b, out=andab);
    Not(in=andab, out=notandab);
    And(a=orab, b=notandab, out=out);
}
